{
  "name": "odoo-debugging-mgm-tool",
  "displayName": "Odoo Debugging Management Tool",
  "description": "A Visual Studio Code extension for managing Odoo debugging.",
  "version": "0.2.1",
  "publisher": "odoo-ps",
  "author": {
    "name": "odoo-ps"
  },
  "license": "MIT",
  "homepage": "https://github.com/odoo-ps/vscode-extension-odoo-debugging-mgm#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/odoo-ps/vscode-extension-odoo-debugging-mgm.git"
  },
  "bugs": {
    "url": "https://github.com/odoo-ps/vscode-extension-odoo-debugging-mgm/issues"
  },
  "keywords": [
    "odoo",
    "debugging",
    "python",
    "postgresql",
    "development",
    "project-management"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "Debuggers",
    "Extension Packs"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odoo-debugging-mgm-tool-OdooTools",
          "icon": "resources/odoo.svg",
          "title": "Odoo Tools"
        }
      ]
    },
    "views": {
      "odoo-debugging-mgm-tool-OdooTools": [
        {
          "id": "projectSelector",
          "name": "Projects"
        },
        {
          "id": "repoSelector",
          "name": "Repos"
        },
        {
          "id": "dbSelector",
          "name": "Databases"
        },
        {
          "id": "moduleSelector",
          "name": "Modules"
        },
        {
          "id": "testingSelector",
          "name": "Testing"
        },
        {
          "id": "versionsManager",
          "name": "Versions",
          "icon": "$(versions)"
        }
      ]
    },
    "commands": [
      {
        "command": "projectSelector.create",
        "title": "Create Project",
        "icon": "$(add)"
      },
      {
        "command": "projectSelector.setup",
        "title": "Setup Odoo",
        "icon": "resources/icons/setup.svg"
      },
      {
        "command": "projectSelector.delete",
        "title": "Delete Project",
        "icon": "resources/icons/delete.svg"
      },
      {
        "command": "projectSelector.editSettings",
        "title": "Project Settings",
        "icon": "$(gear)"
      },
      {
        "command": "projectSelector.duplicateProject",
        "title": "Duplicate Project",
        "icon": "resources/icons/create.svg"
      },
      {
        "command": "projectSelector.exportProject",
        "title": "Export Project",
        "icon": "resources/icons/download.svg"
      },
      {
        "command": "projectSelector.importProject",
        "title": "Import Project",
        "icon": "resources/icons/restore.svg"
      },
      {
        "command": "projectSelector.selectProject",
        "title": "Select Project"
      },
      {
        "command": "odoo-debugger.quickProjectSearch",
        "title": "Quick Project Search",
        "category": "Odoo Debugger"
      },
      {
        "command": "projectSelector.refresh",
        "title": "Refresh",
        "icon": "resources/icons/refresh.svg"
      },
      {
        "command": "repoSelector.selectRepo",
        "title": "Select Repo"
      },
      {
        "command": "repoSelector.refresh",
        "title": "Refresh",
        "icon": "resources/icons/refresh.svg"
      },
      {
        "command": "dbSelector.selectDb",
        "title": "Select Database"
      },
      {
        "command": "dbSelector.create",
        "title": "Create Database",
        "icon": "$(add)"
      },
      {
        "command": "dbSelector.restore",
        "title": "Restore Database",
        "icon": "resources/icons/restore.svg"
      },
      {
        "command": "dbSelector.delete",
        "title": "Delete Database",
        "icon": "resources/icons/delete.svg"
      },
      {
        "command": "dbSelector.changeVersion",
        "title": "Change Version",
        "icon": "$(versions)"
      },
      {
        "command": "dbSelector.getDb",
        "title": "Get Database",
        "icon": "resources/icons/download.svg"
      },
      {
        "command": "dbSelector.refresh",
        "title": "Refresh Databases",
        "icon": "resources/icons/refresh.svg"
      },
      {
        "command": "moduleSelector.refresh",
        "title": "Refresh",
        "icon": "resources/icons/refresh.svg"
      },
      {
        "command": "moduleSelector.create",
        "title": "Create Module",
        "icon": "resources/icons/create.svg"
      },
      {
        "command": "moduleSelector.select",
        "title": "Toggle Module"
      },
      {
        "command": "moduleSelector.togglePsaeInternalModule",
        "title": "Toggle psae-internal Module"
      },
      {
        "command": "moduleSelector.setToInstall",
        "title": "Set to Install"
      },
      {
        "command": "moduleSelector.setToUpgrade",
        "title": "Set to Upgrade"
      },
      {
        "command": "moduleSelector.clearState",
        "title": "Clear State"
      },
      {
        "command": "moduleSelector.installAll",
        "title": "Install All Modules",
        "icon": "$(checklist)"
      },
      {
        "command": "moduleSelector.updateInstalled",
        "title": "Update Installed Modules",
        "icon": "$(arrow-circle-up)"
      },
      {
        "command": "moduleSelector.updateAll",
        "title": "Update All Modules",
        "icon": "$(list-unordered)"
      },
      {
        "command": "moduleSelector.clearAll",
        "title": "Clear All Selections",
        "icon": "$(clear-all)"
      },
      {
        "command": "moduleSelector.viewInstalled",
        "title": "View Installed Modules",
        "icon": "$(database)"
      },
      {
        "command": "testingSelector.refresh",
        "title": "Refresh",
        "icon": "resources/icons/refresh.svg"
      },
      {
        "command": "testingSelector.toggleTesting",
        "title": "Toggle Testing",
        "icon": "$(testing)"
      },
      {
        "command": "testingSelector.addTestTag",
        "title": "Add Test Target",
        "icon": "$(add)"
      },
      {
        "command": "testingSelector.setTestFile",
        "title": "Set Test File",
        "icon": "$(file)"
      },
      {
        "command": "testingSelector.toggleStopAfterInit",
        "title": "Toggle Stop After Init",
        "icon": "$(stop)"
      },
      {
        "command": "testingSelector.removeTestTag",
        "title": "Remove Test Target",
        "icon": "$(remove)"
      },
      {
        "command": "testingSelector.cycleTestTagState",
        "title": "Cycle Test Target State",
        "icon": "$(sync)"
      },
      {
        "command": "testingSelector.toggleLogLevel",
        "title": "Toggle Log Level",
        "icon": "$(symbol-parameter)"
      },
      {
        "command": "testingSelector.setSpecificLogLevel",
        "title": "Set Specific Log Level",
        "icon": "$(list-selection)"
      },
      {
        "command": "odoo.createVersion",
        "title": "Create Version",
        "icon": "$(add)"
      },
      {
        "command": "odoo.changeBranch",
        "title": "Change Branch",
        "icon": "$(git-branch)"
      },

      {
        "command": "odoo.cloneVersion",
        "title": "Clone Version",
        "icon": "$(copy)"
      },
      {
        "command": "odoo.deleteVersion",
        "title": "Delete Version",
        "icon": "$(trash)"
      },
      {
        "command": "odoo.refreshVersions",
        "title": "Refresh",
        "icon": "resources/icons/refresh.svg"
      },
      {
        "command": "odoo.openVersionDefaults",
        "title": "Configure Version Defaults",
        "icon": "$(gear)"
      },
      {
        "command": "odoo.setSettingToDefault",
        "title": "Set to Default Value",
        "icon": "$(refresh)"
      },
      {
        "command": "odoo.setSettingAsDefault",
        "title": "Set as Default",
        "icon": "$(pin)"
      },
      {
        "command": "odoo.setAllSettingsToDefault",
        "title": "Set All to Default Values",
        "icon": "$(refresh)"
      },
      {
        "command": "odoo.setAllSettingsAsDefault",
        "title": "Set All as Default",
        "icon": "$(pin)"
      },
      {
        "command": "odoo.manageVersions",
        "title": "Manage Versions",
        "category": "Odoo"
      },
      {
        "command": "odoo.startServer",
        "title": "Start Server",
        "icon": "resources/icons/debug.svg"
      },
      {
        "command": "odoo.startShell",
        "title": "Start Shell",
        "icon": "resources/icons/shell.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "projectSelector.create",
          "when": "view == projectSelector",
          "group": "navigation@1"
        },
        {
          "command": "projectSelector.setup",
          "when": "view == projectSelector",
          "group": "navigation@2"
        },
        {
          "command": "projectSelector.importProject",
          "when": "view == projectSelector",
          "group": "navigation@3"
        },
        {
          "command": "projectSelector.editSettings",
          "when": "view == projectSelector",
          "group": "navigation@4"
        },
        {
          "command": "odoo.startServer",
          "when": "view == projectSelector",
          "group": "navigation@5"
        },
        {
          "command": "odoo.startShell",
          "when": "view == projectSelector",
          "group": "navigation@6"
        },
        {
          "command": "projectSelector.refresh",
          "when": "view == projectSelector",
          "group": "navigation@7"
        },
        {
          "command": "dbSelector.refresh",
          "when": "view == dbSelector",
          "group": "navigation"
        },
        {
          "command": "dbSelector.create",
          "when": "view == dbSelector",
          "group": "navigation"
        },
        {
          "command": "repoSelector.refresh",
          "when": "view == repoSelector",
          "group": "navigation"
        },
        {
          "command": "moduleSelector.installAll",
          "when": "view == moduleSelector && !odoo-debugger.testing_enabled",
          "group": "navigation@1"
        },
        {
          "command": "moduleSelector.updateInstalled",
          "when": "view == moduleSelector && !odoo-debugger.testing_enabled",
          "group": "navigation@2"
        },
        {
          "command": "moduleSelector.updateAll",
          "when": "view == moduleSelector && !odoo-debugger.testing_enabled",
          "group": "navigation@3"
        },
        {
          "command": "moduleSelector.clearAll",
          "when": "view == moduleSelector && !odoo-debugger.testing_enabled",
          "group": "navigation@4"
        },
        {
          "command": "moduleSelector.viewInstalled",
          "when": "view == moduleSelector",
          "group": "navigation@5"
        },
        {
          "command": "moduleSelector.refresh",
          "when": "view == moduleSelector",
          "group": "navigation@6"
        },
        {
          "command": "testingSelector.addTestTag",
          "when": "view == testingSelector",
          "group": "navigation@1"
        },
        {
          "command": "testingSelector.setTestFile",
          "when": "view == testingSelector",
          "group": "navigation@2"
        },
        {
          "command": "testingSelector.refresh",
          "when": "view == testingSelector",
          "group": "navigation@3"
        },
        {
          "command": "odoo.createVersion",
          "when": "view == versionsManager",
          "group": "navigation@1"
        },
        {
          "command": "odoo.openVersionDefaults",
          "when": "view == versionsManager",
          "group": "navigation@2"
        },
        {
          "command": "odoo.refreshVersions",
          "when": "view == versionsManager",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "projectSelector.delete",
          "when": "view == projectSelector",
          "group": "inline"
        },
        {
          "command": "projectSelector.editSettings",
          "when": "view == projectSelector",
          "group": "project"
        },
        {
          "command": "projectSelector.duplicateProject",
          "when": "view == projectSelector",
          "group": "project"
        },
        {
          "command": "projectSelector.exportProject",
          "when": "view == projectSelector",
          "group": "project"
        },
        {
          "when": "view == dbSelector && viewItem == database",
          "command": "dbSelector.restore",
          "group": "database@1"
        },
        {
          "when": "view == dbSelector && viewItem == database",
          "command": "dbSelector.delete",
          "group": "database@2"
        },
        {
          "when": "view == dbSelector && viewItem == database",
          "command": "dbSelector.changeVersion",
          "group": "database@3"
        },
        {
          "when": "view == moduleSelector && viewItem == module",
          "command": "moduleSelector.setToInstall",
          "group": "module@1"
        },
        {
          "when": "view == moduleSelector && viewItem == module",
          "command": "moduleSelector.setToUpgrade",
          "group": "module@2"
        },
        {
          "when": "view == moduleSelector && viewItem == module",
          "command": "moduleSelector.clearState",
          "group": "module@3"
        },
        {
          "command": "testingSelector.removeTestTag",
          "when": "view == testingSelector && viewItem == testTag",
          "group": "inline"
        },
        {
          "command": "testingSelector.setSpecificLogLevel",
          "when": "view == testingSelector && viewItem == logLevel",
          "group": "logLevel"
        },

        {
          "command": "odoo.changeBranch",
          "when": "view == versionsManager && viewItem =~ /^(version|activeVersion)$/",
          "group": "version"
        },
        {
          "command": "odoo.cloneVersion",
          "when": "view == versionsManager && viewItem =~ /^(version|activeVersion)$/",
          "group": "version"
        },
        {
          "command": "odoo.deleteVersion",
          "when": "view == versionsManager && viewItem == version",
          "group": "version"
        },
        {
          "command": "odoo.setSettingToDefault",
          "when": "view == versionsManager && viewItem == versionSetting",
          "group": "versionSetting@1"
        },
        {
          "command": "odoo.setSettingAsDefault",
          "when": "view == versionsManager && viewItem == versionSetting",
          "group": "versionSetting@2"
        },
        {
          "command": "odoo.setAllSettingsToDefault",
          "when": "view == versionsManager && viewItem =~ /^(version|activeVersion)$/",
          "group": "versionDefaults@1"
        },
        {
          "command": "odoo.setAllSettingsAsDefault",
          "when": "view == versionsManager && viewItem =~ /^(version|activeVersion)$/",
          "group": "versionDefaults@2"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "projectSelector",
        "when": "odoo-debugger.is_active === 'false'",
        "contents": "Open a folder or a workspace for the extension to work.\n[Open Folder](command:workbench.action.files.openFolder)\n[Open Workspace](command:workbench.action.openWorkspace)"
      }
    ],
    "keybindings": [
      {
        "command": "odoo-debugger.quickProjectSearch",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus || !inputFocus"
      }
    ],
    "configuration": {
      "title": "Odoo Debugger",
      "properties": {
        "odooDebugger.defaultVersion.debuggerName": {
          "type": "string",
          "default": "odoo:18.0",
          "description": "Default debugger name for new versions"
        },
        "odooDebugger.defaultVersion.debuggerVersion": {
          "type": "string",
          "default": "1.0.0",
          "description": "Default debugger version for new versions"
        },
        "odooDebugger.defaultVersion.portNumber": {
          "type": "number",
          "default": 8018,
          "description": "Default port number for new versions"
        },
        "odooDebugger.defaultVersion.shellPortNumber": {
          "type": "number",
          "default": 5018,
          "description": "Default shell port number for new versions"
        },
        "odooDebugger.defaultVersion.limitTimeReal": {
          "type": "number",
          "default": 0,
          "description": "Default real time limit for new versions (0 = unlimited)"
        },
        "odooDebugger.defaultVersion.limitTimeCpu": {
          "type": "number",
          "default": 0,
          "description": "Default CPU time limit for new versions (0 = unlimited)"
        },
        "odooDebugger.defaultVersion.maxCronThreads": {
          "type": "number",
          "default": 0,
          "description": "Default maximum cron threads for new versions (0 = unlimited)"
        },
        "odooDebugger.defaultVersion.extraParams": {
          "type": "string",
          "default": "--log-handler,odoo.addons.base.models.ir_attachment:WARNING",
          "description": "Default extra parameters for new versions"
        },
        "odooDebugger.defaultVersion.devMode": {
          "type": "string",
          "default": "--dev=all",
          "enum": ["", "--dev=all", "--dev=xml", "--dev=reload", "--dev=qweb"],
          "enumDescriptions": [
            "No development mode",
            "All development features",
            "XML development features",
            "Auto-reload",
            "QWeb development features"
          ],
          "description": "Default development mode for new versions"
        },
        "odooDebugger.defaultVersion.dumpsFolder": {
          "type": "string",
          "default": "/dumps",
          "description": "Default dumps folder path for new versions"
        },
        "odooDebugger.defaultVersion.odooPath": {
          "type": "string",
          "default": "./odoo",
          "description": "Default Odoo installation path for new versions"
        },
        "odooDebugger.defaultVersion.enterprisePath": {
          "type": "string",
          "default": "./enterprise",
          "description": "Default enterprise addons path for new versions"
        },
        "odooDebugger.defaultVersion.designThemesPath": {
          "type": "string",
          "default": "./design-themes",
          "description": "Default design themes path for new versions"
        },
        "odooDebugger.defaultVersion.customAddonsPath": {
          "type": "string",
          "default": "./custom-addons",
          "description": "Default custom addons path for new versions"
        },
        "odooDebugger.defaultVersion.pythonPath": {
          "type": "string",
          "default": "./venv/bin/python",
          "description": "Default Python executable path for new versions"
        },
        "odooDebugger.defaultVersion.subModulesPaths": {
          "type": "string",
          "default": "",
          "description": "Default sub-modules paths for new versions"
        },
        "odooDebugger.defaultVersion.installApps": {
          "type": "string",
          "default": "",
          "description": "Default apps to install for new versions"
        },
        "odooDebugger.defaultVersion.upgradeApps": {
          "type": "string",
          "default": "",
          "description": "Default apps to upgrade for new versions"
        },
        "odooDebugger.databaseSwitchBehavior": {
          "type": "string",
          "default": "ask",
          "enum": ["ask", "auto-both", "auto-version-only", "auto-branch-only"],
          "enumDescriptions": [
            "Always ask what to do when selecting a database",
            "Automatically switch both version settings and git branches",
            "Automatically switch version settings only (no branch switching)",
            "Automatically switch git branches only (no version switching)"
          ],
          "description": "Controls what happens automatically when selecting a database with a different version"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "watch:dev": "NODE_ENV=development webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:vsix": "vsce package",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "install": "^0.13.0",
    "jsonc-parser": "^3.3.1",
    "npm": "^11.5.2"
  }
}
