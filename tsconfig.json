{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"moduleResolution": "node16",
		"types": [
			"node",
			"vscode",
			"mocha"
		],
		"noImplicitReturns": true,
		"noUnusedParameters": true
	}
}
